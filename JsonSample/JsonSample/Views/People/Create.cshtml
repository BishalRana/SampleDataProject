@model JsonSample.Models.People;

@{
    ViewData["Title"] = "Add";
}
<br />
@using (Html.BeginForm())
{

@Html.AntiForgeryToken()

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">People</h3>
    </div>
    <div class="panel-body">
        <div class=" row form-horizontal">
            @if (ViewBag.Message != null)
    {
        <div class=" form-group ">
            <div class="col-md-offset-2 col-md-6 .col-md-offset-4 alert alert-danger" role="alert">
                @Html.DisplayText("Message")
            </div>
        </div>
}

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class=form-group>
                @Html.LabelFor(m => m.firstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 .col-md-offset-4">
                    @Html.EditorFor(m => m.firstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class=form-group>
                @Html.LabelFor(m => m.lastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 .col-md-offset-4">
                    @Html.EditorFor(m => m.lastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class=form-group>
                @Html.LabelFor(m => m.Date_Of_Birth, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 .col-md-offset-4">
                    @Html.EditorFor(m => m.Date_Of_Birth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Date_Of_Birth, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class=form-group>
                @Html.LabelFor(m => m.nickname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 .col-md-offset-4">
                    @Html.EditorFor(m => m.nickname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nickname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class=form-group>
                <span class="col-md-2"></span>
                <div class="col-md-6 .col-md-offset-4">
                    <input value="Add Addresses" type="button" onclick="addAddressRow();" class="control-label" />
                </div>
            </div>

            <div id="divAddress" class=form-group>
                <span class="col-md-2"></span>
                @Html.Partial("Address_Partial")
            </div>

            <div class=form-group>
                <label class="control-label col-md-2"> </label>
                <div class="col-md-6 .col-md-offset-4">
                    @Html.ActionLink("", "Index", null, null, new { @class = "btn btn-primary glyphicon glyphicon-arrow-left" })
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>                
        </div>
    </div>
</div>
}
