@model JsonSample.Models.People;

@{
    ViewData["Title"] = "Delete";
}
<script type="text/javascript">
    window.onload = function(){
        var buttons = document.getElementsByClassName("buttonRemoveAddress");
           for (i = 0; i < buttons.length; i++) {
             buttons[i].style.visibility = 'hidden';
           } 
    };
</script>
<br />
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">People</h3>
    </div>
    <div class="panel-body">
        <div class=" row form-horizontal">
            @if (ViewBag.Message != null)
            {
            <div class=" form-group ">
                <div class="col-md-offset-2 col-md-6 .col-md-offset-4 alert alert-danger" role="alert">
                    @Html.DisplayText("Message")
                </div>
            </div>
            }

            <br />
            <br />

            <div class="col-md-offset-2 col-md-6 alert alert-info">
                Are you sure you want to delete?
            </div>
            <br />
            <br />
            <br />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-xs-6">

                <dl class="dl-horizontal">
                    <dt>
                       First Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.firstName)
                    </dd>
                    <dt>
                        Last Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.lastName)
                    </dd>
                    <dt>
                        Date of Birth
                    </dt>
                    <dd>
                        @Model.Date_Of_Birth.ToString("MM/dd/yyyy")
                    @*@Html.DisplayFor(model => model.Date_Of_Birth.Date, "MM/dd/yyyy")*@
                    </dd>
                    <dt>
                        Nick Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.nickname)
                    </dd>
                    <dt>
                        Address:
                    </dt>
                    <dd>
                        @if (Model.addresses!=null)
                        {
                            @foreach (var address in Model.addresses)
                            {
                                
                                <div>                                
                                      @address.line1                                
                                </div>

                                <div >
                                        @address.line2
                                </div>
                                <div >
                                        @address.postCode
                                    
                                </div>
                                <div >
                                        @address.country
                                </div>

                                <br/>
                            }

                        }


                    </dd>
                   
                    <dd>
                        @using (Html.BeginForm())
                        {
                            <div style="padding-top: 20px;">
                                @Html.ActionLink("", "Index", null, null, new { @class = "btn btn-primary glyphicon glyphicon-arrow-left" })
                                <input type="submit" value="Delete" class="btn btn-primary" />
                            </div> 
                        }
                    </dd>
                </dl>
            </div>

        </div>
    </div>
</div>
}